// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
    {
        "key": "shift+a",
        "command": "explorer.newFolder",
        "when": "filesExplorerFocus"
    },
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus"
    },
    {
        "key": "ctrl+0",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "!filesExplorerFocus"
    },
    {
        "key": "ctrl+0",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "filesExplorerFocus"
    },
    {
        "key": "shift+cmd+space",
        "command": "workbench.action.focusFirstEditorGroup",
        "when": "!editorTextFocus"
    },
    {
        "key": "cmd+1",
        "command": "-workbench.action.focusFirstEditorGroup"
    },
    {
        "key": "shift+cmd+space",
        "command": "workbench.action.terminal.focus",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+e",
        "command": "editor.emmet.action.expandAbbreviation",
        "when": "config.emmet.triggerExpansionOnTab && editorTextFocus && !config.emmet.suggestExpandedAbbreviation && !editorHasMultipleSelections && !editorHasSelection && !editorReadonly && !editorTabMovesFocus"
    },
    {
        "key": "tab",
        "command": "-editor.emmet.action.expandAbbreviation",
        "when": "config.emmet.triggerExpansionOnTab && editorTextFocus && !config.emmet.suggestExpandedAbbreviation && !editorHasMultipleSelections && !editorHasSelection && !editorReadonly && !editorTabMovesFocus"
    },
    {
        "key": "ctrl+shift+g",
        "command": "-workbench.view.scm"
    },
    {
        "key": "shift+cmd+k",
        "command": "workbench.action.terminal.focusNext"
    },
    {
        "key": "shift+cmd+j",
        "command": "workbench.action.terminal.focusPrevious"
    },
    {
        "key": "ctrl+f",
        "command": "extension.vim_right",
        "when": "editorTextFocus && !inDebugRepl && vim.mode == 'Insert'"
    },
    {
        "key": "shift+cmd+t",
        "command": "workbench.action.terminal.new"
    },
    {
        "key": "alt+cmd+p",
        "command": "-projectManager.listProjects"
    },
    {
        "key": "shift+cmd+e",
        "command": "workbench.files.action.collapseExplorerFolders",
        "when": "filesExplorerFocus"
    },
    {
        "key": "cmd+enter",
        "command": "editor.action.goToImplementation",
        "when": "editorHasImplementationProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
        "key": "cmd+f12",
        "command": "-editor.action.goToImplementation",
        "when": "editorHasImplementationProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
        "key": "cmd+enter",
        "command": "editor.action.goToDeclaration",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
        "key": "f12",
        "command": "-editor.action.goToDeclaration",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
        "key": "shift+cmd+enter",
        "command": "editor.action.openDeclarationToTheSide",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
        "key": "cmd+k f12",
        "command": "-editor.action.openDeclarationToTheSide",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
        "key": "shift-cmd+g",
        "command": "workbench.view.scm"
    },
    {
        "key": "ctrl+cmd+e",
        "command": "workbench.action.showErrorsWarnings"
    },
    {
        "key": "ctrl+cmd+p",
        "command": "projectManager.listProjectsNewWindow"
    }
]